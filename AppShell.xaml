    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:UdpEsp8266App"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="UDP Communicator"
        ContentTemplate="{DataTemplate local:MainPage}"
